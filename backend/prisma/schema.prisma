generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MAN
  WOMAN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   // Remember to hash this!
  gender    Gender
  avatar    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}